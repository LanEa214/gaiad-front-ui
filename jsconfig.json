{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@service/*": ["src/service/*"],
      "@common/*": ["src/common/*"],
      "@hook/*": ["src/hook/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@/*": ["src/*"],
      // 兼容umi
      "@umijs/max": ["src/utils/umi.ts"],
      "umi": ["src/utils/umi.ts"]
    }
  }
}
